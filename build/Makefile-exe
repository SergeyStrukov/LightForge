RUN_OPT ?=

#-------------------------------------------------------------------------------

# OBJ_LIST =
# LIB_LIST =

#-------------------------------------------------------------------------------

$(TARGET) : $(OBJ_LIST)
	$(LD) $(LDOPT) $(OBJ_LIST) $(LDLIB) $(LIB_LIST) -o $@

.PHONY : run

run: $(TARGET)
	$(TARGET) $(RUN_OPT)

